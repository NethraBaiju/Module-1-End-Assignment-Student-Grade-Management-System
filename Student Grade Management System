def calculate_average(marks):

    "Accepts a list of 5 numeric marks and returns the average."
    return sum(marks) / len(marks)



def get_grade(average):
    "Accepts the average mark and returns the grade."

    if average >= 90:
        return "A"
    elif average >= 80:
        return "B"
    elif average >= 70:
        return "C"
    elif average >= 60:
        return "D"
    else:
        return "F"

print(" Student Grade Management System ")

marks = []  


for i in range(1, 6):
    mark = float(input(f"Enter mark for subject {i}: "))

    
    while mark < 0 or mark > 100:
        print("Invalid mark! Please enter a value between 0 and 100.")
        mark = float(input(f"Re-enter mark for subject {i}: "))

    marks.append(mark)


average = calculate_average(marks)
grade = get_grade(average)


print("\nResult")
print(f"Average Marks: {average:.2f}")
print(f"Grade: {grade}")
